    <script>
           
               
                 let Identity =  (document.getElementById('inputEmail').textContent).trim()
                 MycartNumber()
                 Checkoutbtn()
                 Orderhistory()
                 Shopphistory()


                 function MycartNumber(){
                    let Data = {Identity:Identity }
                    $.ajax({
                        type: 'POST',
                        url: '/UsersfetchCartNumber',
                        ContentType: 'application/json',
                        data: Data,
                        success: function(data) {
                           document.getElementById('CartNumber').textContent = data.Quantity
                          // alert(data.Quantit)
                          
                        }
                     })

                 }
                

                        
                 function Checkoutbtn(){
                    let Data = {Identity:Identity }
                    $.ajax({
                        type: 'POST',
                        url: '/UsersFetchcheckout',
                        ContentType: 'application/json',
                        data: Data,
                        success: function(data) {
                           document.getElementById('Checkoutnumber').textContent = data.Quantity
                          
                        }
                     })
                 }



                 function Orderhistory(){
                    let Data = {Identity:Identity }
                    $.ajax({
                        type: 'POST',
                        url: '/UserCheckOrderpending',
                        ContentType: 'application/json',
                        data: Data,
                        success: function(data) {
                           document.getElementById('MyOrderNumber').textContent = data.Quantity
                          
                        }
                     })
                 }



                 function Shopphistory(){
                    let Data = {Identity:Identity }
                    $.ajax({
                        type: 'POST',
                        url: '/UserAutoHistory',
                        ContentType: 'application/json',
                        data: Data,
                        success: function(data) {
                           document.getElementById('History').textContent = data.Quantity
                          
